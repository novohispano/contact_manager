<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<ul>
  <% @person.phone_numbers.each do |phone_number| %>
    <li>
      <%= phone_number.number %>
      <%= link_to 'edit', edit_phone_number_path(phone_number) %>
      <%= link_to 'delete', phone_number_path(phone_number), method: :delete %>
    </li>
  <% end %>
</ul>

<ul>
  <% @person.email_addresses.each do |email_address| %>
    <li>
      <%= email_address.address %>
      <%= link_to 'edit email', edit_email_address_path(email_address) %>
      <%= link_to 'delete email', email_address_path(email_address), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %> |
<%= link_to 'Add phone number', new_phone_number_path(person_id: @person) %> |
<%= link_to 'Add email', new_email_address_path(person_id: @person) %>
